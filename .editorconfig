# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.hbs]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = tab
indent_size = 4

[*.js]
indent_style = tab
indent_size = 2

[{package.json,*.yml,*.cjson}]
indent_size = 2
